<!-- views/partials/studies-form.handlebars -->

<fieldset>
  <legend>Edit/Add Study</legend>
  <!--Public Name -->
  <input type="hidden" value="{{study.completion_notes}}" name="completion_notes">
  <div class="form-group">
    <label for="study-public-name">Public Name</label><br>
    <input class="form-control" id="study-public-name" type="text" name="public_name" value="{{study.public_name}}"/>
  </div>

  <!--Public DESCRIPTION -->
  <div class="form-group">
    <label for="study-public-description">Public Description</label><br>
    <textarea class="form-control" id="study-public-description" name="public_description" rows="10" />{{study.public_description}}</textarea>
  </div>

  <!--Private Name -->
  <div class="form-group">
    <label for="study-private-name">Private Name</label><br>
    <input class="form-control" id="study-private-name" type="text" name="private_name" value="{{study.private_name}}"/>
  </div>

  <!--Private DESCRIPTION -->
  <div class="form-group">
    <label for="study-private-description">Private Description</label><br>
    <textarea class="form-control" id="study-private-description" name="private_description" rows="10" />{{study.private_description}}</textarea>
  </div>

  <!-- Number of Participants -->
  <div class="form-group">
    <label for="number-of-participants">Number of Participants</label><br>
    <input class="form-control" id="number-of-participants" type="number" name="number_of_participants" min="1" value={{study.number_of_participants}}/>
  </div>

  <!-- Survey Link -->
  <div class="form-group">
    <label for="link">Link to Survey</label><br>
    <input class="form-control" id="participant-contact" type="text" name="link" value="{{study.link}}"/>
  </div>
</fieldset>
