<!-- views/participants-edit.handlebars -->

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form method="POST" action="/participants/{{participant._id}}?_method=PUT">
      {{> participants-form}}
      <!-- BUTTON -->
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Participant</button>
        <input type="button" onclick="location.href='/participants/{{participant._id}}';" value="Cancel Changes" />
      </div>
    </form>
  </div>
</div>
