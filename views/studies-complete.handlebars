<a href="/studies/index">Back to List</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{study.public_name}}</h1>
    <p>{{study.public_description}}</p>
    <p>Number of Participants: {{study.number_of_participants}}</p>

    <form method="POST" action="/studies/{{study._id}}?_method=PUT">
        <div class="form-group">
          <label for="completion_notes">Conclusion</label><br>
          <textarea class="form-control" id="completion_notes" name="completion_notes" rows="10" />Write Completion Notes...</textarea>
        </div>
      <!-- BUTTON -->
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Study</button>
        <input type="button" onclick="location.href='/studies/{{study._id}}';" value="Cancel Changes" />
      </div>
    </form>
  </div>
</div>
